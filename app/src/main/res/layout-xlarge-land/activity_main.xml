<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Customize Dashboard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="#C6512F"
            android:textColor="@android:color/white" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"/>

    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/devslopesbanner" />
    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" android:layout_marginTop="132dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
    <TextView
            android:text="Devslopes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="28dp" android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
            android:fontFamily="sans-serif" android:textStyle="bold" android:textColor="@color/colorPrimary"/>

    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView15"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/camerabutton" />
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView15"
            app:layout_constraintStart_toEndOf="@+id/imageView7" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView16" app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toEndOf="@+id/imageView15" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button" app:layout_constraintTop_toTopOf="@+id/imageView15"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15" app:layout_constraintVertical_bias="0.0"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="359dp"
            android:layout_height="168dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView17" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:scaleType="centerCrop" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintDimensionRatio="w,16:9"
            app:layout_constraintHorizontal_bias="0.776" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="359dp"
            android:layout_height="168dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView18"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView17"
            app:layout_constraintStart_toStartOf="@+id/imageView17" android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="w,16:9" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="359dp"
            android:layout_height="168dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView20"
            app:layout_constraintTop_toTopOf="@+id/imageView17" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:scaleType="centerCrop" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintDimensionRatio="w,16:9"
            app:layout_constraintBottom_toBottomOf="@+id/imageView17" app:layout_constraintHorizontal_bias="0.23"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView21"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="@+id/imageView20"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView20"
            android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="@+id/imageView20"/>
</android.support.constraint.ConstraintLayout>