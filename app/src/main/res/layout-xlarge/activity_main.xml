<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" android:layout_marginTop="192dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Devslopes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="28dp" android:layout_marginTop="280dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
            android:fontFamily="sans-serif" android:textStyle="bold" android:textColor="@color/colorPrimary"/>
    <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView9"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintEnd_toStartOf="@+id/imageView9" android:layout_marginStart="60dp"/>
    <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView10"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView8" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView10"/>
    <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="268dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView9" app:layout_constraintHorizontal_bias="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="351dp"
            android:layout_height="200dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView11"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="150dp" app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintDimensionRatio="w,16:9"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="351dp"
            android:layout_height="200dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toStartOf="@+id/imageView11"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView11"
            app:layout_constraintDimensionRatio="w,16:9" app:layout_constraintEnd_toEndOf="@+id/imageView11"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView13"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11" android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView14" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12" android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"/>
    <Button
            android:text="Customize Dashboard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="#C6512F"
            android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>